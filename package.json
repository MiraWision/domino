{
  "name": "@mirawision/domino",
  "version": "1.0.0",
  "description": "Lightweight DOM utilities for Chrome Extension content scripts",
  "keywords": [
    "dom",
    "chrome-extension",
    "content-script",
    "mutation-observer",
    "dom-utils",
    "typescript",
    "dom-manipulation",
    "element-selection",
    "wait-for-element"
  ],
  "author": "Yelysei Lukin <yelysei277@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MiraWision/domino.git"
  },
  "bugs": {
    "url": "https://github.com/MiraWision/domino/issues"
  },
  "homepage": "https://mirawision.github.io/domino",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./element": {
      "types": "./element.d.ts",
      "default": "./element.js"
    },
    "./observer": {
      "types": "./observer.d.ts",
      "default": "./observer.js"
    },
    "./wait": {
      "types": "./wait.d.ts",
      "default": "./wait.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node index.js",
    "test": "jest",
    "pack": "npm pack",
    "prepublish": "npm run build",
    "publish": "npm publish --access public"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "ts-jest": "29.1.2",
    "typescript": "5.3.3"
  }
}